@model IList<DynamicLinqWebDocs.Models.Example>


@if( Model.Count > 0 )
{
    <h3>Examples</h3>
    for( int i = 0; i < Model.Count; i++)
    {
        var example = Model[i];
        
        @Html.FormatMarkdown(example.HeaderRemarks)
    
        if (example.EquivalentCode == null)
        {
            @Html.FormatCodeBlock(example.ExampleCode)
        }
        else
        {
            <div class="row">
                <div class="col-md-6">
                    <h5>Dynamic LINQ Example</h5>
                    @Html.FormatCodeBlock(example.ExampleCode)
                </div>
                <div class="col-md-6">
                    <h5>Standard LINQ Equivalent Example</h5>
                    @Html.FormatCodeBlock(example.EquivalentCode)
                </div>
            </div>
        }

        @Html.FormatMarkdown(example.FooterRemarks)
        
        if (i < (Model.Count - 1))
        {
            <br />
        }
    }
}